{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": false,
    "outDir": "./compiled",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": [
      "vite/client"
    ]
  },
  "files": ["src/index.tsx"],
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "babel.config.js",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/mocks/svgMock.js",
    "src/setupTests.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "<tsconfigRootDir>/vite/client.d.ts",
    "compiled/**"
  ]
}