{
	"name": "Bacalhau Dev Environment",
	"image": "docker.io/bacalhauproject/bacalhau-devcontainer@sha256:a7eb77e9f04e7c43bb7c230fb385f513a47f91ea991a8c88b68a04d7b54ae5d0",
	"containerEnv": {},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker": {}
	},
	"overrideCommand": false,
	"userEnvProbe": "loginInteractiveShell",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/bacalhau/.ssh,type=bind,consistency=cached",
		"type=volume,source=dind-var-lib-docker,target=/var/lib/docker",
		"type=bind,source=/var/run/docker.sock,target=/var/run/docker-host.sock"
	],
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--privileged",
		"--init"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"davidanson.vscode-markdownlint",
				"golang.go",
				"ms-azuretools.vscode-docker"
			],
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"go.buildTags": "e2e,perf,conftests,unit,integration_test,certtests,allcomponents",
				"git.alwaysSignOff": true,
				"terminal.integrated.env.linux": {},
				"python.languageServer": "Pylance"
			}
		}
	},
	"workspaceFolder": "/workspaces/bacalhau",
	"workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/workspaces/bacalhau"
}